<h1>New Commission</h1>

<%= form_for(@commission) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.hidden_field :customer_id, :value => params[:customer_id] %>

    <%= f.label :date_commissioned, "Date Commissioned" %>
    <%= f.date_field :date_commissioned, class: 'form-control' %>

    <%= f.label :price, "Price" %>
    <%= f.number_field :price, class: 'form-control' %>

    <%= f.label :details, "Details" %>
    <%= f.text_area :details, class: 'form-control' %>

    <%= f.submit button_text, class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', commissions_path %>